{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "lib",
    "rootDir": "src",
    "watch": true
  },
  "exclude": [
      "examples",
      "lib",
      "node_modules",
      "typings/browser.d.ts",
      "typings/browser"
  ]
}